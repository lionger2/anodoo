<odoo>
	<data>
		
		<!-- 参考：res_partner_kanban_view -->
		<record model="ir.ui.view" id="view_customer_kanban">
            <field name="name">anodoo.customer.kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" archivable="false">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="title"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="is_company"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="mobile"/>
                    <field name="state_id"/>
                    <field name="category_id"/>
                    <field name="image_128"/>
                    <field name="type"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            	<div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                                <t t-if="!record.is_company.raw_value">
                                	<t t-if="record.customer_type.raw_value === 'person'" t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                                    <t t-else="" t-set="placeholder" t-value="'/base/static/img/company_image.png'"/>
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                    <div class="o_kanban_image rounded-circle d-md-none" t-attf-style="background-image:url('#{kanban_image('res.partner', 'image_128', record.id.raw_value,  placeholder)}')">
                                        <img class="o_kanban_image_inner_pic" t-if="record.parent_id.raw_value" t-att-alt="record.parent_id.value" t-att-src="kanban_image('res.partner', 'image_128', record.parent_id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <t t-set="placeholder" t-value="'/base/static/img/company_image.png'"/>
                                    <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.id.raw_value, placeholder)})" role="img"/>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading">
                                    	<field name="display_name"/>
                                    	<t t-if="record.customer_identity.raw_value">（<field name="customer_identity"/>）</t>
                                    </strong>
                                    <div>
                                        <field name="customer_label_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                    	<li t-if="record.customer_type.raw_value and record.customer_size.raw_value"><field name="customer_type"/> , <field name="customer_size"/></li>
                     					<t t-if="record.customer_type.raw_value=='person' and record.function.raw_value">
                                        <li>
                                        	<field name="function"/><t t-if="record.belong_company.raw_value"> , <field name="belong_company"/></t>
                                        </li>
                                        </t>
                                        <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                    </ul>
                                    <div class="oe_kanban_partner_links"/>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="customer_priority" widget="priority"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                        	<t t-if="record.user_id">
                                            <img t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" class="oe_kanban_avatar"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
	
		<!-- 参考：view_partner_tree -->
		<record id="view_customer_list" model="ir.ui.view">
            <field name="name">anodoo.customer.tree</field>
            <field name="model">res.partner</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <tree string="客户">
                    <field name="display_name" string="Name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="city" optional="hide"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                    <field name="vat" optional="hide"/>
                    <field name="user_id" invisible="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
		<!-- 参考：view_partner_form -->
		<record id="view_customer_form" model="ir.ui.view">
            <field name="name">anodoo.customer.form</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
            	
                <form string="Partners">
                <header>
            		<field name="lifetime_stage_id" widget="statusbar"
                            options="{'clickable': '1', 'fold_field': 'fold'}"
                            domain="[('lifetime_id', '=', lifetime_id)]"
                            attrs="{'invisible': [('active', '=', False)]}"/>
            	</header>
                <field name="lifetime_id" invisible="1"/>
                <field name="partner_type" invisible="1"/>
                <field name="is_prospect" invisible="1"/>
                <field name="is_losing" invisible="1"/>
                <field name="is_success" invisible="1"/>
                <field name="parent_id" invisible="1"/>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget='image' class="oe_avatar" options='{"preview_image": "image_128"}'/>
                    <div class="oe_title">
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="active" invisible="1"/>
                        <field name="company_type" invisible="1"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="客户名称..." />
                        </h1>
                        <label for="customer_type"/> : <field name="customer_type" widget="radio"  options="{'horizontal': true}"/>
                        <br/>
                        <label for="customer_size"/> : <field name="customer_size" widget="radio"  options="{'horizontal': true}"/>
                    </div>

                    <group>
                        <group name="base_info" string="基本信息">
                        	<field name="customer_identity" />
                        	<field name="customer_priority" widget="priority"/>
                        	<field name="lifetime_id" options='{"no_open": True, "no_create": True}' required="1"/>
                        	<field name="belong_company" widget="res_partner_many2one" domain="" context="{}" attrs="{'invisible': [('customer_type','!=', 'person')]}"/>
                            <field name="function" attrs="{'invisible': [('customer_type','!=', 'person')]}"/>
                            <field name="title" options='{"no_open": True}' attrs="{'invisible': [('customer_type','!=', 'person')]}"/>
                            
                        </group>
                        <group name="contact_info" string="联系信息">
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email" />
                            <field name="website" widget="url" placeholder="e.g. https://www.anodoo.com"/>
                        </group>
                        <group name="commercal_info" string="分配信息">
                            <field name="is_alloted" attrs="{'invisible': [('belong_user_id','!=', False)]}"/>
                            <field name="belong_user_id"/>
                        </group>
                        <group name="comment_info" string="备注信息">
                            <field name="customer_label_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                            <field name="comment" />
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page name="addresss" string="地址" autofocus="autofocus">
                            
                        </page>
                        <page name="contacts" string="联系人">
                            
                        </page>
                        <page name="commercial" string="企业商业信息" attrs="{'invisible': [('customer_type','!=', 'company')]}">
                            <field name="industry_id"/>
                            <field name="vat"/>
                            <field name="bank_ids"/>
                            <field name="credit_limit"/>
                        </page>
                        <page name='sales_purchases' string="销售信息">
                            <group name="container_row_2">
                                <group string="Sales" name="sale" priority="1">
                                    <field name="user_id"/>
                                </group>
                                <group string="Purchase" name="purchase" priority="2" invisible="1">
                                </group>
                                <group name="misc" string="Misc">
                                    <field name="ref" string="Reference"/>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': True}"/>
                                    <field name="industry_id" attrs="{'invisible': [('is_company', '=', False)]}" options="{'no_create': True}"/>
                                </group>
                            </group>
                        </page>
                        <page name="customer_relation" string="客户与客户关系">
                            <field name="customer_relation_customer_ids"/>
                        </page>
                        <page name='prospect' string="潜在客户" attrs="{'invisible': [('is_prospect', '=', False)]}">
                            
                        </page>
                        <page name='losing' string="流失客户" attrs="{'invisible': [('is_losing', '=', False)]}">
                            
                        </page>
                        <page name='success' string="成功客户" attrs="{'invisible': [('is_success', '=', False)]}">
                           
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>
		<!-- 参考：view_res_partner_filter -->
		<record id="view_customer_search" model="ir.ui.view">
            <field name="name">anodoo.customer.search</field>
            <field name="model">res.partner</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <search string="客户搜索">
                    <field name="name" filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self)]"/>
                    <field name="parent_id" domain="[('is_company', '=', True)]" operator="child_of"/>
                    <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                    <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', '=', self)]"/>
                    <field name="category_id" string="Tag" filter_domain="[('category_id', 'child_of', self)]"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="个人客户" name="type_person" domain="[('is_company', '=', False)]"/>
                    <filter string="公司客户" name="type_company" domain="[('is_company', '=', True)]"/>
                    <separator/>
                    <filter string="归档客户" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="customer_type" string="客户性质" domain="[]" context="{'group_by' : 'customer_type'}" />
                        <filter name="customer_size" string="客户规模" context="{'group_by': 'customer_size'}"/>
                        <filter name="customer_priority" string="优先级" context="{'group_by': 'customer_priority'}"/>
                        <filter name="lifetime_stage_id" string="生命周期" context="{'group_by': 'lifetime_stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_customer_prospect_search" model="ir.ui.view">
            <field name="name">anodoo.customer.search</field>
            <field name="model">res.partner</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <search string="客户搜索">
                    <field name="name" filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self)]"/>
                   
                </search>
            </field>
        </record>
        
		<!-- 客户性质 model_id: anodoo.customer.type-->
