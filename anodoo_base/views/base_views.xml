<odoo>
	<data>
	
		<!-- 用户菜单扩展 model_id: anodoo.usermenu.link-->
	    <record id="view_anodoo_usermenu_link_form" model="ir.ui.view">
	        <field name="name">anodoo.usermenu.link.view.form</field>
	        <field name="model">anodoo.usermenu.link</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <form string="anodoo_usermenu_link">
	                <sheet>
		                <group name="group_top">
			                 <group name="group_left">
			                     <field name="name" />
			                     <field name="sequence" />
			                     <field name="description" />
			                 </group>
			                 <group name="group_right">
			                 	<field name="groups" />
			                     <field name="isblank" />
			                     <field name="url" />
			                     <field name="onclick" />
			                 </group>
			             </group>
	                </sheet>
	            </form>            
	        </field>
	    </record>
	    <record id="view_anodoo_usermenu_link_list" model="ir.ui.view">
	        <field name="name">anodoo.usermenu.link.view.list</field>
	        <field name="model">anodoo.usermenu.link</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <tree>
	                <field name="name" />
	                <field name="isblank" />
	                <field name="url" />
	                <field name="onclick" />
	                <field name="sequence" />
	                <field name="groups" />
	                <field name="description" />                
	            </tree>
	        </field>
	    </record>
	    <record id="view_anodoo_usermenu_link_search" model="ir.ui.view">
	        <field name="name">anodoo.usermenu.link.view.search</field>
	        <field name="model">anodoo.usermenu.link</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <search>
	            	<field name="name" filter_domain="[('name', 'ilike', self)]" />
	            </search>
	        </field>
	    </record>
	    
	    <!-- 动作 anodoo.usermenu.link-->
		<record id="action_anodoo_usermenu_link_list" model="ir.actions.act_window">
	        <field name="name">用户菜单扩展</field>
	        <field name="res_model">anodoo.usermenu.link</field>
	        <field name="view_mode">tree,form</field>
	        <field name="context">{'active_test':True}</field>
	    </record>
	    
	    <!-- 数据清理 model_id: anodoo.data.clean-->
	    <record id="view_anodoo_data_clean_form" model="ir.ui.view">
	        <field name="name">anodoo.data.clean.view.form</field>
	        <field name="model">anodoo.data.clean</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <form string="anodoo_data_clean">
	            	<header>
	            		<button string="执行清理" name="action_data_clean" type="object" class="btn oe_highlight" title="执行清理过程"/>
	            	</header>
	                <sheet>
		                <group name="group_top">
			                 <group name="group_left">
			                     <field name="name" />
			                     <field name="table_name" />			                     
			                     <field name="description" />
			                 </group>
			                 <group name="group_right">
			                     <field name="class_name" />
			                     <field name="method_name" />
			                     <field name="method_define" />
			                 </group>
			             </group>
	                </sheet>
	            </form>            
	        </field>
	    </record>
	    <record id="view_anodoo_data_clean_list" model="ir.ui.view">
	        <field name="name">anodoo.data.clean.view.list</field>
	        <field name="model">anodoo.data.clean</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <tree>
	                <field name="name" />
	                <field name="table_name" />
	                <field name="class_name" />
	                <field name="method_name" />
	                <field name="method_define" />                
	            </tree>
	        </field>
	    </record>
	    <record id="view_anodoo_data_clean_search" model="ir.ui.view">
	        <field name="name">anodoo.data.clean.view.search</field>
	        <field name="model">anodoo.data.clean</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <search>
	            	<field name="name" filter_domain="[('name', 'ilike', self)]" />
		             	
	            </search>
	        </field>
	    </record>
	    
	    <!-- 动作 anodoo.data.clean-->
		<record id="action_anodoo_data_clean_list" model="ir.actions.act_window">
	        <field name="name">数据清理</field>
	        <field name="res_model">anodoo.data.clean</field>
	        <field name="view_mode">tree,form</field>
	        <field name="context">{'active_test':True}</field>
	    </record>
	    
		<!-- 城市 model_id: res.country.state.city-->
	    <record id="view_res_country_state_city_form" model="ir.ui.view">
	        <field name="name">res.country.state.city.view.form</field>
	        <field name="model">res.country.state.city</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <form string="res_country_state_city">
	                <sheet>
		                <group name="group_top">
			                 <group name="group_left">
			                     <field name="code" />
			                     <field name="name" />
			                 </group>
			                 <group name="group_right">
			                     <field name="country_id" />
			                     <field name="state_id" />
			                 </group>
			             </group>
	                </sheet>
	            </form>            
	        </field>
	    </record>
	    <record id="view_res_country_state_city_list" model="ir.ui.view">
	        <field name="name">res.country.state.city.view.list</field>
	        <field name="model">res.country.state.city</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <tree>
	                <field name="code" />
	                <field name="name" />
	                <field name="country_id" />
	                <field name="state_id" />           
	            </tree>
	        </field>
	    </record>
	    <record id="view_res_country_state_city_search" model="ir.ui.view">
	        <field name="name">res.country.state.city.view.search</field>
	        <field name="model">res.country.state.city</field>
	        <field name="priority">100</field>
	        <field name="arch" type="xml">
	            <search>
	            	<field name="code" filter_domain="[('code', 'ilike', self)]" />
	            	<field name="name" filter_domain="[('name', 'ilike', self)]" />
		            <separator/>            	
		           	<group expand="1" string="Group By">
		           		<filter name="groupby_state_id"  string="省" context="{'group_by':'state_id'}" />               	
		           	</group>         	
	            </search>
	        </field>
	    </record>
	    
	    <record id="view_translation_tree" model="ir.ui.view">
            <field name="model">ir.translation</field>
            <field name="inherit_id" ref="base.view_translation_tree"/> 
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='state']" position="after">
	        		<field name="anodoo"/>	        		
                    <field name="module"/>
                    <field name="res_id"/>
	        	</xpath>
            </field>
        </record>
